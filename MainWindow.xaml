        <!-- Верхняя 1 часть с вертикальными разделами -->
        <Border Grid.Row="1" Grid.Column="0" Background="Gray" Margin="5" Grid.ColumnSpan="2">
            <TreeView FontSize="22" x:Name="PipeLinesTree" >
                <!--<TreeView.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="Добавить новую трубу" Click="AddNewPipe_Click">
