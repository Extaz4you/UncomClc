            </TreeView>
        </Border>

        <!-- Верхняя 2 часть с вертикальными разделами -->
        <TabControl x:Name="MyTabControl" Grid.Row="1" Grid.Column="2" Margin="5">
            <TabItem Header="Исходные данные для расчета нагревательной секции из кабеля нагревостойкого с минеральной изоляцией" FontSize="15" FontWeight="Bold" Grid.Row="1" Grid.Column="2" >
                <ScrollViewer HorizontalScrollBarVisibility="Auto">
                    
                    <StackPanel Orientation="Horizontal" Margin="10" >

                        <StackPanel Orientation="Vertical">

                            <GroupBox Header="Труба" Margin="5" FontSize="15" FontWeight="Bold">
                                <StackPanel Orientation="Vertical" Margin="15">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                        <Label Content="Тип:" />
                                        <ComboBox Width="160"  x:Name="Pipes" Height="25">
                                            <ComboBoxItem Content=""/>
                                        </ComboBox>
                                        <Button x:Name="EditPipes" Content="..." Width="50" Height="25" Margin="10,0,0,0"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                        <Label Content="Наружный диаметр:"/>
                                        <TextBox Width="50" Height="25"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                        <Label Content="Толщина стенки:"/>
                                        <TextBox Width="50" Height="25"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal">
                                        <Label Content="Длина:"/>
                                        <TextBox Width="50" Height="25"/>
                                        <Label Content="Коэф. запаса:"/>
                                        <TextBox Width="50" Height="25"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" Margin="10" HorizontalAlignment="Center">
                                        <Button Content="Задвижки, опоры..."  Width="170" Height="25" BorderThickness="2" x:Name="ValvesAndSupports"/>
                                    </StackPanel>

                                </StackPanel>
                            </GroupBox>

                            <GroupBox Header="Теплоизоляция 1 слой" Margin="5" FontSize="15" FontWeight="Bold">

                                <StackPanel Orientation="Vertical" Margin="15">

                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                        <Label Content="Тип:"/>
                                        <ComboBox Width="150" Margin="10,0" Height="25" x:Name="ThermalIsolationCombobox">
                                            <ComboBoxItem Content=" "/>
                                        </ComboBox>
                                        <Button x:Name="ThermalIsolationEditButton" Content="..." Height="25" Width="50"  HorizontalAlignment="Center"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                        <Label Content="Толщина:"/>
                                        <TextBox Height="25" Width="50" x:Name="ThicknessIsolation"/>
                                    </StackPanel>

                                </StackPanel>
                            </GroupBox>

                            <GroupBox Header="Теплоизоляция 2 слой" Margin="5" FontSize="15" FontWeight="Bold">

                                <StackPanel Orientation="Vertical" Margin="15">

                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                        <Label Content="Тип:"/>
                                        <ComboBox Width="150" Margin="10,0" Height="25" x:Name="ThermalIsolationCombobox2">
                                            <ComboBoxItem Content=" "/>
                                        </ComboBox>
                                        <Button x:Name="ThermalIsolationEditButton2" Content="..." Height="25" Width="50"  HorizontalAlignment="Center"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                        <Label Content="Толщина:"/>
                                        <TextBox Height="25" Width="50" x:Name="ThicknessIsolation2"/>
                                    </StackPanel>

                                </StackPanel>
                            </GroupBox>

                        </StackPanel>

                        <StackPanel Orientation="Vertical">

                            <GroupBox Header="Окружающая среда" Margin="5" FontSize="15" FontWeight="Bold">
                                <StackPanel Orientation="Vertical" Margin="15">

                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                        <Label Content="Мин. температура окр. среды:"/>
                                        <TextBox Width="50" Height="25"/>
                                        <Label Content="°C"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                        <Label Content="Макс. температура окр. среды:"/>
                                        <TextBox Width="50" Height="25"/>
                                        <Label Content="°C"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                        <Label Content="Размещение трубопровода:"/>
                                        <TextBox Width="100" Height="25"/>
                                    </StackPanel>

                                </StackPanel>
                            </GroupBox>

                            <GroupBox Header="Технологический процесс" Margin="5" FontSize="15" FontWeight="Bold">
                                
                                <StackPanel Orientation="Vertical" Margin="15">

                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                        <Label Content="Поддерживаемая температура:"/>
                                        <TextBox Width="50" Height="25"/>
                                        <Label Content="°C"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                        <Label Content="Макс. доп. температура продукта:"/>
                                        <TextBox Width="50" Height="25"/>
                                        <Label Content="°C"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                        <Label Content="Пропарка:"/>
                                        <TextBox Width="30" Height="25"/>
                                        <Label Content="Темп. пропарки:"/>
                                        <TextBox Width="50" Height="25"/>
                                        <Label Content="°C"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                        <Label Content="Темп. класс ВЗЭО:"/>
                                        <ComboBox Width="50" Height="25" Margin="0,0,10,0"/>
                                        <TextBox Width="50" Height="25"/>
                                        <Label Content="°C"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                        <Label Content="Рабочая среда:"/>
                                        <ComboBox Width="150" Height="25"/>
                                    </StackPanel>


                                </StackPanel>
                            </GroupBox>

                        </StackPanel>

                        <StackPanel Orientation="Vertical">

                            <GroupBox Header="Параметры питающей сети" Margin="5" FontSize="15" FontWeight="Bold">
                                <StackPanel Orientation="Vertical" Margin="15">
                                    
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                        <Label Content="Напряжение фазное:"/>
                                        <TextBox Width="50" Height="25"/>
                                        <Label Content="В"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                        <Label Content="Напряжение линейное:"/>
                                        <TextBox Width="50" Height="25"/>
                                        <Label Content="В"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                        <Label Content="Номинальный ток АВ:"/>
                                        <TextBox Width="50" Height="25"/>
                                        <Label Content="А"/>
                                    </StackPanel>

                                </StackPanel>
                            </GroupBox>

                            <GroupBox Header="Параметры КСЭО" Margin="5" FontSize="15" FontWeight="Bold">
                                <StackPanel Orientation="Vertical" Margin="15">
                                    
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                        <Label Content="Питание:"/>
                                        <TextBox Width="100" Height="25" Margin="0,0,10,0"/>
                                        <TextBox Width="50" Height="25"/>
                                        <Label Content="В"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                        <Label Content="Схема соединения:"/>
                                        <TextBox Width="50" Height="25"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                        <Label Content="Мин. темп. включения:"/>
                                        <TextBox Width="50" Height="25"/>
                                        <Label Content="°C"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                        <Label Content="Тип кабеля:"/>
                                        <TextBox Width="50" Height="25"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                        <Label Content="Кол-во жил:"/>
                                        <TextBox Width="50" Height="25"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                        <Label Content="Длина устан. части секции:"/>
                                        <TextBox Width="50" Height="25"/>
                                        <Label Content="м"/>
                                    </StackPanel>

                                </StackPanel>
                            </GroupBox>

                        </StackPanel>

                        <StackPanel Orientation="Vertical">

                            <GroupBox Header="Допполнительные функции" Margin="5" FontSize="15" FontWeight="Bold">
                            </GroupBox>

                        </StackPanel>

                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>

        <Border x:Name="Message" Grid.Row="2" Grid.ColumnSpan="3" Margin="5" Background="Gray">
            <ScrollViewer>
                <TextBlock x:Name="MessagesBlock">

                </TextBlock>
            </ScrollViewer>
        </Border>

        <!-- Нижняя часть с горизонтальным разделом -->
        <Border Grid.Row="3" Grid.ColumnSpan="3" Margin="5" Background="LightGray">
            <ScrollViewer>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <!-- Для заголовка или других элементов с фиксированной высотой -->
                        <RowDefinition Height="*" />
                        <!-- Этот ряд занимает все оставшееся пространство -->
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Column="0" Grid.Row="1" HorizontalAlignment="Left">
                        <StackPanel Orientation="Horizontal" Margin="5" VerticalAlignment="Top">
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>
