        WindowState="Maximized">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!-- Верхний горизонтальный раздел -->
            <RowDefinition Height="0.9*" />
            <!-- Верхняя часть (вертикальные разделы) -->
            <RowDefinition Height="0.2*" />
            <!-- Середина сообщения (горизонтальный раздел) -->
            <RowDefinition Height="0.5*" />
            <!-- Нижняя часть (горизонтальный раздел) -->
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="57*" />
            <ColumnDefinition Width="172*"/>
            <!-- Первый вертикальный раздел -->
            <ColumnDefinition Width="471*" />
            <!-- Второй вертикальный раздел -->
        </Grid.ColumnDefinitions>

        <!-- Верхний горизонтальный раздел -->
