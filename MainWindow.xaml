                                <Image Source="pack://application:,,,/Images/Copy.png" Width="20" Height="20"/>
                            </MenuItem.Icon>
                        </MenuItem>
                        <MenuItem Header="Вставить" x:Name="InsertRecord" Click="InsertRecord_Click" IsEnabled="False">

