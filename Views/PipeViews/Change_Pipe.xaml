<Window x:Class="UncomClc.Views.PipeViews.Change_Pipe"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UncomClc.Views.PipeViews"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStyle="SingleBorderWindow"
        Title="Изменить" Height="190" Width="340">
    <StackPanel Orientation="Vertical" Margin="5">

        <StackPanel Margin="5" Orientation="Horizontal" HorizontalAlignment="Left">
            <Label Content="Наименование:" />
            <TextBox Width="200" x:Name="Name"/>
        </StackPanel>

        <StackPanel Margin="5" Orientation="Horizontal" HorizontalAlignment="Left">
            <Label Content="Коэффициент:" Margin="0,0,8,0"/>
            <TextBox Width="80" x:Name="Koef"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,30,5,5">
            <Button Content="OK" Width="100" Click="OkButton_Click"/>
            <Button Content="Отмена" Width="100" Margin="20,0,0,0" Click="CancelButton_Click"/>
        </StackPanel>

    </StackPanel>
</Window>
